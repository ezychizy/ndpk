# PAGE SIZE 1000, 1000
# DEVICE "PNG" FONT ANTIALIASING on
# DEVICE "PNG" OP "transparent:on"
# DEVICE "PNG" OP "compression:9"
# PRINT
#===============EPS FORMAT===========================
#PRINT TO "nme1.rmsd.eps"
#DEVICE "EPS" OP "level2"
#PRINT
